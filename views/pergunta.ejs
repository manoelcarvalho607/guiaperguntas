<%- include ('./partials/header.ejs') %>
<body>
    <%- include ('./partials/navbar.ejs') %>
    
    <div class="container mt-2">
        <hr>
        <h1><%= pergunta.titulo %></h1>
        <p><%= pergunta.descricao %></p>
        <hr>
        <form  method="post"  action="/responder">
            <h3>Responda abaixo</h3>
            <label>Resposta: </label>
            <textarea name="corpo" placeholder="Digite sua resposta" class="form-control" ></textarea>
            <input type="hidden" name="pergunta" value="<%= pergunta.id %>">
            <button type="submit" class="btn btn-primary mt-4">Responder</button>
        </form>
        <hr>
        <h3>Respostas</h3>
        <hr>
        <% respostas.forEach(resposta => {%>
            <%= resposta.corpo %>
       <% }) %>

    </div>
   
</body>
<%- include ('./partials/footer.ejs') %>